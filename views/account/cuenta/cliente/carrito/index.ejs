    <script src="/bootstrap-5.3.3-dist/js/bootstrap.bundle.js"></script> -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&display=swap"
    rel="stylesheet">
</head>

<body>

  <div>
    <section>
      <!--Sidebar-->

      <div class="sidebar">
        <a href="#" id="homeBtn"><img src="/img/logo/Logo Letra trazo.png" alt="logo" class="logo"></a>

        <a href="#" id="client">Inicio</a>
        <a href="#general" id="pagBtn">Ir a la Pág. Principal</a>
        <a class="active sidebar_btn " href="#carrito" id="carritoBtn">Carrito</a>
        <a href="#contacto" id="contactoBtn">Servicio al Cliente</a>
        <a href="#configuracion" id="configuracionBtn">Configuración</a>

        <button class="Log-Out" id="logout"><a href="#">Cerrar sesion
          </a></button>
      </div>

    </section>

    <section class="interfaz">
      <div class="container">
        <div class="content">
          <h1>Tu Carrito de Compras</h1>
          <% if (productos.length === 0) { %>
            <p>El carrito está vacío.</p>
          <% } else { %>
            <div class="row row-cols-4">
              <% productos.forEach(function(producto) { %>
                <div class="card" style="width: 15rem;">
                  <% if (producto.imagen && producto.imagen.data) { %>
                    <img 
                      class="card-img-top img-thumbnail mb-3"
                      src="<%= producto.imagen.data %>" 
                      alt="<%= producto.nombre %>"
                      style="max-width: 100%; height: auto;" 
                    />
                  <% } else { %>
                    <p>Sin imagen</p>
                  <% } %>
                  <div class="card-body">
                    <h5 class="card-title"><%= producto.nombre %></h5>
                    <p class="card-text">Cantidad: <%= producto.cantidad %></p>
                    <form action="/carritos/eliminar" method="POST" class="mt-2">
                      <input type="hidden" name="productoId" value="<%= producto._id %>">
                      <button type="submit" class="btn btn-danger">Eliminar del carrito</button>
                    </form>
                  </div>
                </div>
              <% }); %>                                                 
            </div>
          <% } %>
          <form action="/carritos/vaciar" method="POST">
            <button type="submit" id="vaciar-carrito" class="btn btn-warning mt-3">Vaciar Carrito</button>
          </form>
        </div>
      </div>
    </section>            

  </div>

  <footer>
    <div class="text-right p-3 text-muted" style="background-color:#2d1c1c; color: #fff;">
      © 2024 Copyright:
      <a class="link text-body" href="/views/home/index.html">ToolBox</a>
    </div>
  </footer>

  </div>


  <script src="/js/cuenta.js"></script>
  <script src="/js/carritoC.js"></script>
  <script src="/js/client.js"></script>
  <script src="/js/logout.js"></script>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>