<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ToolBox - Cuenta/Cliente Carrito</title>

  <link rel="icon" type="image/x-icon" href="/img/logo/Logo 180.png">

  <link rel="stylesheet" href="/css/cuenta.css">
  <link rel="stylesheet" href="/css/carrito.css">

  <!--BOOTSTRAP-->
   <!--  <link rel="stylesheet" href="/bootstrap-5.3.3-dist/css/bootstrap.rtl.min.css">
    <script src="/bootstrap-5.3.3-dist/js/bootstrap.bundle.js"></script> -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&display=swap"
    rel="stylesheet">
</head>

<body>

  <div>
    <section>
      <!--Sidebar-->

      <div class="sidebar">
        <a href="#" id="homeBtn"><img src="/img/logo/Logo Letra trazo.png" alt="logo" class="logo"></a>

        <a href="#" id="client">Inicio</a>
        <a href="#general" id="pagBtn">Ir a la Pág. Principal</a>
        <a class="active sidebar_btn " href="#carrito" id="carritoBtn">Carrito</a>
        <a href="#contacto" id="contactoBtn">Servicio al Cliente</a>
        <a href="#configuracion" id="configuracionBtn">Configuración</a>

        <button class="Log-Out" id="logout"><a href="#">Cerrar sesion
          </a></button>
      </div>

    </section>

    <section class="interfaz">
      <div class="container">
        <div class="content">

          <!--Carrito-->

          <div class="carrito">
            <div class="card bg-dark text-white" style="padding: 5rem;">
              <div class="card-img-overlay" style="background-color: #5e3b3b;
                              background: rgb(94,59,59);
                              background: linear-gradient(153deg, rgba(94,59,59,1) 25%, rgba(52,44,44,1) 100%);">
                <h3 class="card-title">CARRITO</h3>
                <p class="card-text-overlay">Tu carrito de compras y tu historial de productos comprados</p>
              </div>
            </div>

            <div class="historial">

              <div class="d-flex historial-letra">

                <h1>Carrito de Compras</h1>
                <ul>
                  <% if (carrito && carrito.productos.length > 0) { %>
                    <% carrito.productos.forEach(producto => { %>
                      <li>
                        <%= producto.nombre %> - <%= producto.cantidad %>
                        <form action="/carrito/eliminar" method="POST" style="display:inline;">
                          <input type="hidden" name="productoId" value="<%= producto.productoId %>">
                          <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                      </li>
                    <% }) %>
                  <% } else { %>
                    <li>El carrito está vacío.</li>
                  <% } %>
                </ul>
                <form action="/carrito/vaciar" method="POST">
                  <button type="submit" class="btn btn-warning">Vaciar Carrito</button>
                </form>
                
            </div>

            <div class="historialP">

              <div class="d-flex historial-letra">

                <h3>Historial de pedidos</h3>

                <a href="#" class="historial-mas">Ver más
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-login-2" width="20"
                    height="20" viewBox="0 0 24 24" stroke-width="1.5" stroke="#f9f9f9" fill="none"
                    stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                    <path d="M9 8v-2a2 2 0 0 1 2 -2h7a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-7a2 2 0 0 1 -2 -2v-2" />
                    <path d="M3 12h13l-3 -3" />
                    <path d="M13 15l3 -3" />
                  </svg>
                </a>

              </div>

              <div class="gridGroup">
                <!--EJEMPLO-->

                <div class="card-group card-generalP">
                  <div class="card card-general">
                    <img class="card-img-top" src="/img/escaleras/T 4 tramos AC.webp" alt="Card image cap">
                    <div class="card-body card-body-update">
                      <p class="card-text"><small>Escaleras Tijera 4 tramos</small></p>
                      <p class="card-text text-muted"><small>Last updated 3 mins ago</small></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>


    </section>

  </div>

  <footer>
    <div class="text-right p-3 text-muted" style="background-color:#2d1c1c; color: #fff;">
      © 2024 Copyright:
      <a class="link text-body" href="/views/home/index.html">ToolBox</a>
    </div>
  </footer>

  </div>


  <script src="/js/cuenta.js"></script>
  <script src="/js/carritoC.js"></script>
  <script src="/js/client.js"></script>
  <script src="/js/logout.js"></script>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>