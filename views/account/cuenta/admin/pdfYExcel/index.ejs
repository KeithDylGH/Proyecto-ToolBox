<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToolBox - Ver inventario</title>

    <link rel="icon" type="image/x-icon" href="/img/logo/Logo 180.png">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/cuenta.css">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid">
                <a class="navbar-brand text-light" href="#" id="admin">
                    <img src="/img/logo/Logo trazo 180.png" alt="Logo" height="45" class="w-25 d-inline-block align-text-top">
                    ToolBox Account
                </a>
                <a class="nav-link active" aria-current="page" id="invPag" href="#">Inicio</a>
            </div>
        </nav>
    </header>

    <section class="container">
        <div class="py-4">
            <h2>Descargar Inventario</h2>
                <div class="d-flex justify-content-around mt-4">
                    <a href="/api/descargar-inventario?format=pdf" class="btn btn-primary">Descargar en PDF</a>
                    <a href="/api/descargar-inventario?format=excel" class="btn btn-success">Descargar en Excel</a>
                </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Categoría</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (productos && productos.length > 0) { %>
                            <% productos.forEach(producto => { %>
                                <tr>
                                    <td><%= producto.nombre %></td>
                                    <td><%= producto.precio %></td>
                                    <td><%= producto.categoria %></td>
                                    <td><%= producto.descripcion %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="4">No hay productos disponibles</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script src="/controllers/productos.js"></script>
    <script src="/js/cuenta.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>
